        <Label Content="Nome" HorizontalAlignment="Left" Margin="55,42,0,0" VerticalAlignment="Top"/>
        <Label Content="Telefone" HorizontalAlignment="Left" Margin="44,153,0,0" VerticalAlignment="Top"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="60,94,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbNome" HorizontalAlignment="Left" Height="23" Margin="129,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="375"/>
